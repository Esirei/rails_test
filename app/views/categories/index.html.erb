<h1 class="text-center">Listing All Categories</h1>

<div class="text-center">
  <%= will_paginate %>
  <%# @categories.each do |category| %>
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <% @categories.each do |category| %>
        <ul class="listing">
          <li class="article-title"><%= link_to "#{category.name}", category_path(category) %></li>
          <li><small><%= pluralize(category.articles.count, 'article') %></small></li>
        </ul>
      <% end %>
    </div>
  </div>
  <%# end %>
  <%= will_paginate %>
</div>