<h1 class="text-center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>


<%= form_for(@category, html: { class: 'form-horizontal', role: 'form' } ) do |form| %>
    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= form.label :name %>
      </div>
      <div class="col-sm-4">
        <%= form.text_field :name, class: 'form-control', placeholder: 'Category name', autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= form.submit(class: 'btn btn-primary btn-lg') %>
      </div>
    </div>
<% end %>

<div class="text-center">
  [ <%= link_to 'Cancel request and return to articles list', articles_path %> ]
</div>