<h1 class="text-center">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
  <div class="text-center col-md-4 col-md-offset-4">
    <!--gravatar_for is a custom method in application_helper.rb-->
    <%= gravatar_for(@user, size: 150) %>
  </div>
</div>

<h4 class="text-center"><%= @user.username %>'s articles</h4>

<%= render('articles/article', obj: @user.articles) %>